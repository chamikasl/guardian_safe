<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Parent.ParentHomeActivity"
    >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bag01"
    android:alpha="0.3">

</ImageView>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lavender"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageButton
            android:id="@+id/to_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:background="@color/lavender"
            android:clickable="true"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@color/lavender"
            android:clickable="true"
            android:src="@drawable/baseline_qr_code_24"
            app:tint="@color/white" />


    </androidx.appcompat.widget.Toolbar>
    <!-- driver info -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginTop="85dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottom_sheet"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabSelectedTextColor="@color/lavender"
                android:background="@drawable/tab_item_bg"
                style="@style/DefaultUnderlineTabLayout">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/status"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Driver Infomation" />



            </com.google.android.material.tabs.TabLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/dil1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Driver Name"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lavender"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dil2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Bus Number"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lavender"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dil3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Phone Num"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lavender"
                android:text="" />


        </LinearLayout>

    </LinearLayout>

    <!-- Student History -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginTop="325dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottom_sheet1"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabSelectedTextColor="@color/lavender"
            android:background="@drawable/tab_item_bg"
            style="@style/DefaultUnderlineTabLayout">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/status1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="Student History" />



        </com.google.android.material.tabs.TabLayout>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="select date"
                android:visibility="gone"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/l1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_home_24"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Home Picked"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/homepick2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lavender"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_school_24"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="School Droped"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/schooldrop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lavender"
                android:text="" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/l3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_how_to_reg_24"
                app:tint="@color/lavender" />

            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="School Picked"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/schoolpick2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lavender"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/baseline_escalator_warning_24"
                app:tint="@color/lavender" />

            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Home Dropped"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/homedrop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lavender"
                android:text="" />


        </LinearLayout>
        <Button
            android:id="@+id/selectDateButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_design"
            android:textColor="@color/gray"
            android:text="Select Date" />


    </LinearLayout>


</RelativeLayout>